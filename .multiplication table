import java.io.*;
import java.util.*;
class table
{
int n,i;
table(int a)
{
n=a;
for(i=1;i<11;i++)
{
System.out.println(n+"X"+i+"="+n*i);
}
}
}
class mul
{
public static void main(String args[])
{
table t=new table(4);
}
}
14.bonus using constructor
import java.io.*;
import java.util.*;
class employee
{
int sal,bon;
String grd;
employee(int a,String b)
{
sal=a;
grd=b;
if(grd=="A")
{
bon=(sal*5)/100;
System.out.println("bonus is:"+bon);
}
if(grd=="B")
{
bon=(sal*10)/100;
System.out.println("bonus is:"+bon);
}
}
}
class Bonus
{
public static void main(String args[])
{
employee e=new employee(25000,"A");
employee e1=new employee(10500,"B");
}
}
